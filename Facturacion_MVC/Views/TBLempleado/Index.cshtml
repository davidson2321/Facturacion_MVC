@model IEnumerable<Facturacion_MVC.Models.Tblempleado>
@{
    ViewBag.titulo = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Administración de Empleados</h2>
        <a href="@Url.Action("Nuevo")" class="btn btn-success">+ Nuevo Empleado</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Documento</th>
                    <th>Teléfono</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StrNombre</td>
                        <td>@item.NumDocumento</td>
                        <td>@item.StrTelefono</td>
                        <td>@item.StrEmail</td>
                        <td>
                        <a href="@Url.Action("Editar", new { id = item.IdEmpleado })" class="btn btn-sm btn-primary me-2">Editar</a>
                        <a href="@Url.Action("Borrar", new { id = item.IdEmpleado })" class="btn btn-sm btn-danger">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


