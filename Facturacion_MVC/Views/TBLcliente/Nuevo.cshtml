@model Facturacion_MVC.Models.Tblcliente
@{
    ViewBag.titulo = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="mb-4">Nuevo Cliente</h2>

@using (Html.BeginForm("Nuevo", "TBLCliente", FormMethod.Post))
{
    <div class="row mb-3">
        <div class="col-md-6">
            @Html.LabelFor(d => d.StrNombre, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(d => d.StrNombre, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(d => d.NumDocumento, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(d => d.NumDocumento, new { @class = "form-control" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            @Html.LabelFor(d => d.StrDireccion, htmlAttributes: new { @class = "form-label" })
            @Html.TextAreaFor(d => d.StrDireccion, new { @class = "form-control", rows = 2 })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(d => d.StrTelefono, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(d => d.StrTelefono, new { @class = "form-control" })
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            @Html.LabelFor(d => d.StrEmail, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(d => d.StrEmail, new { @class = "form-control" })
        </div>
        
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            @Html.LabelFor(d => d.DtmFechaModifica, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(d => d.DtmFechaModifica, new { @class = "form-control", @type = "date" })
        </div>
       
    </div>

    

    <div class="d-flex justify-content-end">
        <input type="submit" value="Guardar" class="btn btn-primary me-2" />
        <a href="@Url.Action("Index", "TBLCliente")" class="btn btn-secondary">Cancelar</a>
    </div>
}

