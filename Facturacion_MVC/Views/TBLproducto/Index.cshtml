@model IEnumerable<Facturacion_MVC.Models.Tblproducto>
@{
    ViewBag.titulo = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Administración de Productos</h2>
    <a href="@Url.Action("Nuevo")" class="btn btn-success">+ Nuevo Producto</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Codigo</th>
                <th>Precio Compra</th>
                <th>Precio Venta</th>
                <th>Categoria</th>

                <th>Detalles</th>

                <th>Foto</th>
                
                <th>Stock</th>
                <th>Fecha modificacion</th>
                <th>Usuario modificado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StrNombre</td>
                    <td>@item.StrCodigo</td>
                    <td>@item.NumPrecioCompra</td>
                    <td>@item.NumPrecioVenta</td>
                    <td>@item.IdCategoria</td>

                    <td>@item.StrDetalle</td>
                    <td>
                        @if (item.StrFoto != null)
                        {
                            <img src="@Url.Content("~/Content/Images/" + item.StrFoto)" alt="Imagen" style="width: 50px; height: 50px;" />
                        }
                        else
                        {
                            <span>No hay imagen</span>
                        }
                    <td>@item.NumStock</td>
                    <td>@item.DtmFechaModifica.ToString("dd/MM/yyyy")</td>
                    <td>@item.StrUsuarioModifica</td>

                    
                    <td>
                        <a href="@Url.Action("Editar", new { id = item.IdProducto })" class="btn btn-sm btn-primary me-2">Editar</a>
                        <a href="@Url.Action("Borrar", new { id = item.IdProducto })" class="btn btn-sm btn-danger">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


